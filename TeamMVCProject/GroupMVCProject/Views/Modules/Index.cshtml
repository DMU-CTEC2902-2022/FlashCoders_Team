@model IEnumerable<TeamMVCProject.Models.Module>

@{
    ViewBag.Title = "Modules";
}

<center><img src="~/Images/Educational-Logo.png" width="200" height="150" /></center>

<p>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModuleCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModuleTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModuleDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModuleContents)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleContents)
            </td>
            <td>

                @Html.ActionLink("Details", "Details", new { id = item.ModuleID }) |

            </td>
        </tr>
    }

</table>

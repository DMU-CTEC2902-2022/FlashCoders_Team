@{
    ViewBag.Title = "Student";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>
<center><img src="~/Images/Educational-Logo.png" width="200" height="150" /></center>
<html>
<head>
    <link href="~/Stylesheets/Student.css" rel="stylesheet" />
</head>
<body>
    <center><h2>Update Your Details</h2></center>
            <div class="container">
                <form action="~/Views/Home/Student.cshtml">
                            <label for="fname"><i class="firstname"></i> Full Name</label>
                            <input type="text" id="fname" name="firstname" placeholder="Jack">
                            <label for="sname"><i class="surname"></i> SurName</label>
                            <input type="text" id="sname" name="surname" placeholder="Jack">
                            <label for="dname"><i class="dob"></i> Date Of Birth</label>
                            <input type="text" id="dname" name="dob" placeholder="01/01/2000">
                            <label for="email"><i class="email"></i> Email</label>
                            <input type="text" id="email" name="email" placeholder="jack@example.com">
                            <label for="adr"><i class="address"></i> Address</label>
                            <input type="text" id="adress" name="address" placeholder="121 London Road">
                            <label for="city"><i class="city"></i> Town/City </label>
                            <input type="text" id="city" name="city" placeholder="Leicester">
                            <p>
                                <label for="postcode"><i class="postcode"></i> PostCode </label>
                                <input type="text" id="postcode" name="postcode" placeholder="LE1 2ER">
                                <label for="mobile"><i class="mobile"></i> Mobile Number </label>
                                <input type="text" id="mobile" name="mobile" placeholder="07765432123">
                            </p>
                            <label for="password"><i class="password"></i> Password </label>
                            <input type="text" id="password" name="password" placeholder="jack2000">
                            <label for="password"><i class="newpassword"></i> New Password </label>
                            <input type="text" id="password" name="password" placeholder="*******">
                            </div>
            <center><input type="submit" value="Update Details" class="btn"></center>
                </form>
    </body>
</html>
